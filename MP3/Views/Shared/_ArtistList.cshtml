@model IEnumerable<MP3.Models.Artists>

@for (int i = 0; i < Model.Count(); i++)
{
    MP3.Models.Artists singer = Model.ElementAt(i);
    @Html.ActionLink(singer.Name, "SingerDetail", "Artist", new { id = singer.Id, title = singer.Name.Replace(" ", ",") }, null);
    if (i < Model.Count() - 1)
    {
        @Html.DisplayText(", ");
    }
}

@if (Model.Count() == 0) {
    <span>Đang cập nhật</span>
}
